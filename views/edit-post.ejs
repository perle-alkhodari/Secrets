<%- include("partials/header.ejs") %>

<section>
    <container class="p-horizontal-center">

        <form action="/submit-edit-post" method="post">
          <input type="hidden" name="updatedItemId" value="<%= locals.post_id %>">
            <div class="form-group">
                <label for="comment">Secret</label>
                <textarea class="form-control" rows="5" id="comment" name="newPost"><% if (locals.post) { %><%= locals.post %><% } %></textarea>
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" name="isPrivate" id="exampleCheck1" <% if (locals.isPrivate) { %>checked<% } %>>
              <label class="form-check-label">Private</label>
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1" name="isAnon" <% if (locals.isAnon) { %>checked<% } %>>
              <label class="form-check-label">Anonymous</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

    </container>
</section>

<%- include("partials/footer.ejs") %>